%h2住所情報登録

= form_for @address do |f| 
  = render "devise/shared/error_messages", resource: @address 



  .field
    = f.label :postal_code 
    %br 
    = f.text_field :postal_code 
  

 .field
    = f.label :prefecture 
    %br
    = f.collection_select :prefecture, Prefecture.all, :id, :name,{include_blank: "---"} 
  

  .field
    = f.label :city 
    %br
    = f.text_field :city 
  

  .field
    = f.label :block_number 
    %br
    = f.text_field :block_number 
  

  .field
    = f.label :apartment_name 
    %br
    = f.text_field :apartment_name
  

  .actions
    = f.submit "Sign up" 
  


= render "devise/shared/links" 