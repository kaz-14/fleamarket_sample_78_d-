.single-container
  %header.single-header
    %h1.single-header__logo--center
      = link_to "#" do
        =image_tag("material/logo/logo.png")
  %main.single-main-login
    %h2.login-form-inner
      ログイン
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .form-group
          = f.label :email
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "メールアドレス", class:'form-group__input'
        .form-group
          = f.label :password
          %br/
          = f.password_field :password, autocomplete: "パスワード", class:'form-group__input'
        - if devise_mapping.rememberable?
          .form-group
            = f.check_box :remember_me
            = f.label :remember_me
        .actions
          = f.submit "ログイン"
    %section.login-panel
      .login-no-account
        %p アカウントをお持ちでない方はこちら
        =link_to new_user_registration_path, class: "btn-def--login" do
          新規会員登録        
= render "devise/registrations/registration_footer"
