%section.pickupContainer
  %h2.pickupContainer__head
    ピックアップカテゴリー
  .pickupContainer__productBox
    .pickupContainer__productBox__head
      =link_to "#" do
        %h3.title
          新規投稿商品
    .pickupContainer__productBox__lists
      .pickupContainer__productBox__lists__list
        - @brandProducts.each do |product|
          = link_to product_path(product), class: "listBtn" do
            %figure.pickupContainer__productBox__lists__list__a--img
              = image_tag product.images[0].image.url,class: "pickupContainer__productBox__lists__list__a--img__pice"
            .pickupContainer__productBox__lists__list__a__body
              %h3.pickupContainer__productBox__lists__list__a__body__name
                = product.name
              -# %ul#favoriteBtn
              -#   = render partial: 'favorites/favorite', locals: { product: @product}
              .pickupContainer__productBox__lists__list__a__body__details
                %ul
                  %li
                    = product.price
                    円
                  %li
                %p
                  （税込）


